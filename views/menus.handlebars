<div id="menu">
  <div class="display-menu display">
    <div>
      <h2>{{restaurant.name}} Menu</h2>
    </div>

    <div class="menu">
      <ul class="menu-list">
        {{! map and display menu items }}

        {{#each menus}}
          <li key={{this.id}}>{{this.title}}</li>
        {{/each}}

      </ul>
    </div>
  </div>

  <div id="menu-item-form">
    <form action="">
      <label for="menu-item-name">Item name</label><br />
      <input
        type="text"
        class="menu-item-name menu-item-input"
        name="menu-item-name"
        value=""
      />
      <br />
      <label for="menu-item-price">Price:</label><br />
      <input
        type="text"
        class="menu-item-price menu-item-input"
        name="menu-item-price"
        value="Doe"
      /><br /><br />
      <input type="submit" value="Add" />
    </form>

  </div>

</div>
